@model List<Blog>


<div class="container">

    <div class="row">

        
       @{

           foreach (var item in Model)
            {
                

                <div class="col-md-8 border mb-2 p-3 shadow">


                    <h2 class="text-center mb-2">@(item.Header + " " + item.Id)</h2>

                    <img class="  d-flex justify-content-center mb-2 mx-auto" src="@item.ImagePath" />
                    <p class="border text-center p-3">

                        @item.Content

                    </p>


                </div>


            }
        }





        <div>

            <nav aria-label="Page navigation example">
                <ul class="pagination">


                    @if ((int)ViewBag.CurrentPage != 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-id="@((int)ViewBag.CurrentPage-1)" aria-label="Next">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>



                    }
                  
                    @for (int i = 1; i <= (int)ViewBag.pageCount; i++)
                    {
                        <li class="page-item">

                            @{
                                string color = i == (int)ViewBag.CurrentPage ? "bg-danger" : " ";
                            }
                            <a class="page-link @color"      asp-action="Index" asp-route-id="@i" >@i</a>
                            
                        </li>
                    }



                    @if (ViewBag.pageCount != ViewBag.CurrentPage)
                    {


                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-id="@((int)ViewBag.CurrentPage+ 1)" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>

                    }

                    
                </ul>
            </nav>


       </div>

    </div>
</div>